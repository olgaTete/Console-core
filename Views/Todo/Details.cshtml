@model Console_core.Models.Models.Todo

@{
    ViewBag.Title = "Todo Details";
}

<h1>Todo Details</h1>

<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Done
        </dt>
        <dd class="col-sm-10">
            @Model.Done
        </dd>
        <dt class="col-sm-2">
            Assignee
        </dt>
        <dd class="col-sm-10">
            @Model.Assignee.FirstName @Model.Assignee.LastName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
