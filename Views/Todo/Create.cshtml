@using Console_core.Models.Models;
@model Todo

@{
    ViewBag.Title = "Create Todo";
}

<h2>Create Todo</h2>

<form asp-action="CreateTodoItem" method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Done"></label>
        <input asp-for="Done" class="form-control" />
        <span asp-validation-for="Done" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="AssigneeId">Assignee</label>
        <select id="AssigneeId" name="assigneeId" class="form-control">
            <option value="">Select Assignee</option>
            @foreach (var person in ViewBag.People)
            {
                <option value="@person.Id">@person.FirstName @person.LastName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
