@using Console_core.Models.Models;
@model Todo

@{
    ViewBag.Title = "Edit Todo";
}

<h2>Edit Todo</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Done"></label>
        <select asp-for="Done" class="form-control">
            <option value="true">Done</option>
            <option value="false">Not Done</option>
        </select>
        <span asp-validation-for="Done" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assignee.Id">Assignee</label>
        <select asp-for="Assignee.Id" class="form-control">
            @foreach (var person in ViewBag.People)
            {
                <option value="@person.Value">@person.Text</option>
            }
        </select>
        <span asp-validation-for="Assignee.Id" class="text-danger"></span>
    </div>
    @* <input type="hidden" asp-for="Id" />*@
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div> 
